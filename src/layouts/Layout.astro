---
const { title } = Astro.props

let pageTitle = 'Anthrotech'
if (title) {
    pageTitle = `${pageTitle} - ${title}`
}

---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
	</head>
	<body>
        <div id="wrap">
            <slot />
        </div>
	</body>
</html>

<style is:global>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

ul,ol {
    padding-left: 1.8em;
}

ul> li, ol>li {
    margin: 0.4rem 0;
}

h2 {
    font-size: 1.5em;
}

h3 {
    font-size: 1.3em;
}

:is(h1, h2) ~ :is(h1, h2) {
    margin-top: 1em;
}

h3, h4, h5, h6 {
    margin-top: 0.8em;
}

pre {
    padding: 0.5em;
    border-radius: 0.3em;
    margin: 0.5em 0;
}


</style>

<style>
html {
    background-color: #f2f2f2;
    height: 100%;
    font-family: "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Meiryo", sans-serif;
}

body {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

#wrap {
    overflow: hidden;
    display: flex;
    max-width: 820px;
    flex-direction: column;
    gap: 20px;
    flex: 1;
    min-height: 100dvh;
    padding: 20px 0;
}

</style>

